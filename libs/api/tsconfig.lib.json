{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../libs/api/src/*"]
    }
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}

