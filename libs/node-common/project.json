{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/node-common/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/node-common/**/*.ts"]
      }
    },
    "build-tests": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/node-common\"",
          "tsc --project libs/node-common/tsconfig.test.json --outDir dist/tests/node-common"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier \"libs/node-common/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["madge --circular libs/node-common"],
        "parallel": false
      }
    }
  }
}
