{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api-to-blockml/src",
  "projectType": "library",
  "targets": {
    "build-tests": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/api-to-blockml\"",
          "tsc --project libs/api-to-blockml/tsconfig.test.json --outDir dist/tests/api-to-blockml"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier \"libs/api-to-blockml/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["madge --circular libs/api-to-blockml"],
        "parallel": false
      }
    }
  }
}
