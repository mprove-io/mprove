{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~backend/*": ["apps/backend/src/*"],
      "~blockml/*": ["apps/blockml/src/*"],
      "~disk/*": ["apps/disk/src/*"],
      //
      "~api-to-backend/*": ["libs/api-to-backend/src/*"],
      "~api-to-blockml/*": ["libs/api-to-blockml/src/*"],
      "~api-to-disk/*": ["libs/api-to-disk/src/*"],
      "~common/*": ["libs/common/src/*"],
      //
      "@mprove/api-to-backend": ["libs/api-to-backend/src/_index.ts"],
      "@mprove/api-to-blockml": ["libs/api-to-blockml/src/_index.ts"],
      "@mprove/api-to-disk": ["libs/api-to-disk/src/_index.ts"],
      "@mprove/common": ["libs/common/src/_index.ts"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
