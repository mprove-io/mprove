{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~blockml/*": ["apps/blockml/src/*"],
      "~disk/*": ["apps/disk/src/*"],
      "~api/*": ["libs/api/src/*"],
      "@mprove/api": ["libs/api/src/_index.ts"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": ["apps/blockml/**/*.ts", "apps/disk/**/*.ts", "libs/api/**/*.ts"]
}
