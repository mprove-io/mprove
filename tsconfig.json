{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#backend/*": ["apps/backend/src/*"],
      "#blockml/*": ["apps/blockml/src/*"],
      "#disk/*": ["apps/disk/src/*"],
      "#front/*": ["apps/front/src/*"],
      "#common/*": ["libs/common/src/*"],
      "#node-common/*": ["libs/node-common/src/*"],
      "#mcli/*": ["mcli/src/*"]
    }
  },
  "include": [
    "apps/*/src/**/*.ts",
    "mcli/src/**/*.ts",
    "libs/*/src/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "external"]
}
