{
  "compileOnSave": false,
  "compilerOptions": {
    // "rootDir": ".",
    // "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    // "target": "es2015",
    // "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mprove/api": ["libs/api/src/_index.ts"],
      "~/*": ["apps/disk/src/*"],
      "@mprove/nest-lib": ["libs/nest-lib/src/index.ts"],
      "~api/*": ["libs/api/src/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
    // "baseUrl": "./src",
    // "paths": {
    //   "~/*": ["./*"]
    // }
  },
  "exclude": ["node_modules", "tmp"]
}
