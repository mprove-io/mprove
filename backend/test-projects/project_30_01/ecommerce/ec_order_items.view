view: ec_order_items
label: 'Order Items'
table: ecommerce.order_items

fields:
- dimension: order_item_id
  sql: order_item_id

- dimension: order_id
  sql: order_id

- dimension: inventory_item_id
  sql: inventory_item_id
  
- dimension: sale_price
  sql: sale_price
  
- measure: count
  type: count_distinct
  sql: ${order_item_id}

# - measure: total_sale_price
#   type: custom
#   sql: SUM(${sale_price})  
  
- measure: total_sale_price
  type: sum_by_key
  sql: ${sale_price}  
  sql_key: ${order_item_id}
  format_number: '$,.2f'
  
- calculation: total_sale_price_int
  sql: CAST(${total_sale_price} AS BIGINT) 
  format_number: '$,'
  
# - measure: average_sale_price
#   type: custom
#   sql: AVG(${sale_price})     
  
- measure: average_sale_price
  type: average_by_key
  sql: ${sale_price}  
  sql_key: ${order_item_id}  
  format_number: '$,.2f'
  
- calculation: average_sale_price_int
  sql: CAST(${average_sale_price} AS BIGINT)   
  format_number: '$,'  
  
- measure: least_expensive_item
  type: min
  sql: ${sale_price}  
  
- measure: most_expensive_item
  type: max
  sql: ${sale_price}  