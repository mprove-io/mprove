{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "debug": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build-tests"]
    },
    "build-tests": {
      "dependsOn": ["^build-tests"],
      "outputs": ["dist/tests/**"]
    },
    "e2e": {
      "dependsOn": ["build-tests"]
    },
    "lint": {},
    "circular": {}
  }
}
