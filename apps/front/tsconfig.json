{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "target": "ES2022",
    "types": ["node"],
    "useDefineForClassFields": false,
    "moduleResolution": "bundler",
    "paths": {
      "#front/*": ["./src/*"],
      "#common/*": ["../../libs/common/src/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
