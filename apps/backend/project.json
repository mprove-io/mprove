{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "prefix": "backend",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "backend:build:production",
        "host": "0.0.0.0",
        "port": 9229,
        "inspect": "inspect",
        "watch": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    },
    "build-tests": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/backend\"",
          "tsc --project apps/backend/tsconfig.test.json"
        ],
        "parallel": false,
        "outputPath": "dist/tests/backend"
      }
    },
    "e2e": {
      "dependsOn": [
        {
          "target": "build-tests",
          "projects": "dependencies"
        }
      ],
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build-tests backend --with-deps",
          "ava --config=ava-js-e2e.config.js dist/tests/backend/apps/backend/**/*.e2e-spec.js"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "prettier \"apps/backend/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["madge --circular apps/backend"],
        "parallel": false
      }
    },
    "compose-up-build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "tools/deploy/base-dev",
        "commands": [
          "docker-compose up --detach --build backend-scheduler",
          "docker-compose up --detach --build backend"
        ],
        "parallel": false
      }
    },
    "compose-build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "./",
        "commands": ["docker-compose build backend"],
        "parallel": false
      }
    }
  }
}
