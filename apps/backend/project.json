{
  "name": "backend",
  "prefix": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets"],
        "webpackConfig": "apps/backend/webpack.config.js",
        "sourceMap": true
      },
      "configurations": {
        "development": {},
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "backend:build:production",
        "host": "0.0.0.0",
        "port": 9229,
        "inspect": "inspect",
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production",
          "host": "0.0.0.0",
          "port": 9229,
          "inspect": "inspect",
          "watch": true
        }
      }
    },
    "build-tests": {
      "dependsOn": [
        {
          "target": "build-tests",
          "projects": "dependencies"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/backend\"",
          "tsc --project apps/backend/tsconfig.test.json --outDir dist/tests/backend"
        ],
        "parallel": false
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build-tests backend",
          "ava --config=ava-js-e2e.config.js dist/tests/backend/apps/backend/**/*.e2e-spec.js"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier \"apps/backend/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["madge --circular apps/backend"],
        "parallel": false
      }
    },
    "compose-up-build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "tools/deploy/base-dev",
        "commands": ["docker-compose up --detach --build backend"],
        "parallel": false
      }
    },
    "compose-build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./",
        "commands": ["docker-compose build backend"],
        "parallel": false
      }
    }
  }
}
