{
  "name": "mcli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mcli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/mcli",
        "main": "apps/mcli/src/main.ts",
        "tsConfig": "apps/mcli/tsconfig.app.json",
        "assets": ["apps/mcli/src/assets"],
        "webpackConfig": "apps/mcli/webpack.config.js",
        "sourceMap": true
      },
      "configurations": {
        "development": {},
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "build-tests": {
      "dependsOn": [
        {
          "target": "build-tests",
          "projects": "dependencies"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/mcli\"",
          "tsc --project apps/mcli/tsconfig.test.json --outDir dist/tests/mcli",
          "pnpm pjc-to-tests"
        ],
        "parallel": false
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build-tests mcli",
          "ava --config=ava-js-e2e.config.js dist/tests/mcli/apps/mcli/**/*.e2e-spec.js"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier \"apps/mcli/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["madge --circular apps/mcli"],
        "parallel": false
      }
    }
  }
}
