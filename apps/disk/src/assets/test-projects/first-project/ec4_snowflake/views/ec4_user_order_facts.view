view: ec4_user_order_facts
label: User Order Facts
connection: c4_snowflake
derived_table: |
  SELECT
    user_id,
    MIN(CAST(created_at as TIMESTAMP)) AS first_order_ts
  FROM 
    s_db.ecommerce.orders
  GROUP BY
    user_id

fields:
- dimension: user_id
  sql: user_id
  
- time: first_order
  sql: first_order_ts
  group_label: First Order  
  timeframes:
  - year
  - date