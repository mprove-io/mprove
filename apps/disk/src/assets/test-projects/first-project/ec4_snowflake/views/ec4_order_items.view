view: ec4_order_items
label: Order Items
connection: c4_snowflake
table: s_db.ecommerce.order_items

fields:
- dimension: order_item_id
  sql: order_item_id
  label: Id  

- dimension: order_id
  sql: order_id

- dimension: inventory_item_id
  sql: inventory_item_id
  
- dimension: sale_price
  sql: sale_price
  result: number  
  
- measure: count
  type: count_distinct
  sql: ${order_item_id}
  
- measure: total_sale_price
  type: sum
  sql: ${sale_price}
  format_number: '$,.0f'   
  
- measure: average_sale_price
  type: average
  sql: ${sale_price}  
  format_number: '$,.0f'
  
- measure: least_expensive_item
  type: min
  sql: ${sale_price}  
  
- measure: most_expensive_item
  type: max
  sql: ${sale_price}  