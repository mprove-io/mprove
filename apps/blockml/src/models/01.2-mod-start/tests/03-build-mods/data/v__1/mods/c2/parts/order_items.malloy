source: order_items_table is c2_postgres.table('ecommerce.order_items') extend {}

source: order_items is order_items_table extend {
  primary_key: order_item_id
  
  -- dimension: inventory_item_id
  -- dimension: order_id
  dimension: sale_price_ is sale_price::'Numeric'

  measure: 
    order_items_count is count()
    total_sale_price is sale_price_.sum()
    average_sale_price is sale_price_.avg()
    least_expensive_item is sale_price_.min()
    most_expensive_item is sale_price_.max()
}