{
  "name": "blockml",
  "prefix": "blockml",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blockml/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/blockml",
        "main": "apps/blockml/src/main.ts",
        "tsConfig": "apps/blockml/tsconfig.app.json",
        "assets": ["apps/blockml/src/assets"],
        "webpackConfig": "apps/blockml/webpack.config.js",
        "sourceMap": true
      },
      "configurations": {
        "development": {},
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "blockml:build:production",
        "host": "0.0.0.0",
        "port": 9229,
        "inspect": "inspect",
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "blockml:build:development"
        },
        "production": {
          "buildTarget": "blockml:build:production",
          "host": "0.0.0.0",
          "port": 9229,
          "inspect": "inspect",
          "watch": true
        }
      }
    },
    "clean-logs": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf \"./apps/blockml/src/models/**/logs/*.log\""],
        "parallel": false
      }
    },
    "build-tests": {
      "dependsOn": [
        {
          "target": "build-tests",
          "projects": "dependencies"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf \"./dist/tests/blockml\"",
          "tsc --project apps/blockml/tsconfig.test.json --outDir dist/tests/blockml"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx clean-logs blockml",
          "nx build-tests blockml",
          "BLOCKML_LOG_IO=TRUE ava --config=ava-js.config.js dist/tests/blockml/apps/blockml/**/*.spec.js"
        ],
        "parallel": false
      }
    },
    "fm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prettier \"apps/blockml/**/*.{ts,js,json,scss,html,md}\" --write --config .prettierrc.js"
        ],
        "parallel": false
      }
    },
    "circular": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["madge --circular apps/blockml"],
        "parallel": false
      }
    }
  }
}
