{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["bun-types", "node"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "#mcli/*": ["./src/*"],
      "#common/*": ["../libs/common/src/*"],
      "#node-common/*": ["../libs/node-common/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
