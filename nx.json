{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "mprove",
  "affected": {
    "defaultBase": "master"
  },
  "cli": {
    "defaultCollection": "@nrwl/nest"
  },
  "implicitDependencies": {
    ".dockerignore": "*",
    ".env": "*",
    ".envrc": "*",
    ".eslintignore": "*",
    ".eslintrc.js": "*",
    "ava-js-e2e.config.js": ["backend", "blockml", "disk"],
    "ava-js.config.js": ["backend", "blockml", "disk"],
    "ava.config.js": ["backend", "blockml", "disk"],
    "jest.config.js": ["front"],
    "jest.preset.js": ["front"],
    "nx.json": "*",
    "package.json": { "dependencies": "*", "devDependencies": "*" },
    "tailwind.config.js": ["front"],
    "tsconfig.base.json": "*",
    "tsconfig.json": "*",
    "workspace.json": "*",
    "yarn.lock": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "lint",
          "circular",
          "build",
          "build-tests",
          "test",
          "e2e"
        ]
      }
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ]
  },
  "defaultProject": "disk",
  "generators": {
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  }
}
