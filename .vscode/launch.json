{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Local App",
      "configurations": [
        "Chrome frontnode 4200",
        "Local disk 9230",
        "Local blockml 9231",
        "Local backend 9232"
      ],
      "stopAll": true
    },
    {
      "name": "Remote App",
      "configurations": [
        "Chrome frontnode 4200",
        "Remote disk 9230",
        "Remote blockml 9231",
        "Remote backend 9232"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Ava debug spec file - backend / blockml / disk",
      "program": "${workspaceRoot}/node_modules/.bin/ava",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": ["${relativeFile}"],
      "env": {
        "ENV_FILE_PATH": ".env",
        "BLOCKML_LOG_IO": "TRUE"
      }
    },
    {
      "name": "Chrome frontnode 4200",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Local disk 9230",
      "port": 9230,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },
    {
      "name": "Remote disk 9230",
      "port": 9230,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local blockml 9231",
      "port": 9231,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },
    {
      "name": "Remote blockml 9231",
      "port": 9231,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local backend 9232",
      "port": 9232,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },
    {
      "name": "Remote backend 9232",
      "port": 9232,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    }
  ]
}
