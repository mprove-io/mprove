{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Ava file",
      "program": "${workspaceRoot}/node_modules/.bin/ava",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": ["${relativeFile}"],
      "env": {
        "ENV_FILE_PATH": ".env",
        "BLOCKML_LOG_IO": "TRUE"
      }
    },
    {
      "name": "Chrome 4200",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Backend 9229",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
