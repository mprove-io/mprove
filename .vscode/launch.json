{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Remote App",
      "configurations": [
        "chrome 4200",
        "Remote disk 9230",
        "Remote backend 9231",
        "Remote backend-scheduler 9232",
        "Remote blockml-single 9233",
        "Remote blockml-main 9234",
        "Remote blockml-worker 9235"
      ],
      "stopAll": true
    },
    {
      "name": "Local App",
      "configurations": [
        "chrome 4200",
        "Local disk 9230",
        "Local backend 9231",
        "Local backend-scheduler 9232",
        "Local blockml-single 9233",
        "Local blockml-main 9234",
        "Local blockml-worker 9235"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Ava file",
      "program": "${workspaceRoot}/node_modules/.bin/ava",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "args": ["${relativeFile}"],
      "env": {
        "ENV_FILE_PATH": ".env",
        "BLOCKML_LOG_IO": "TRUE"
      }
    },
    {
      "name": "chrome 4200",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Remote disk 9230",
      "port": 9230,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local disk 9230",
      "port": 9230,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },

    {
      "name": "Remote backend 9231",
      "port": 9231,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local backend 9231",
      "port": 9231,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },

    {
      "name": "Remote backend-scheduler 9232",
      "port": 9232,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local backend-scheduler 9232",
      "port": 9232,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },

    {
      "name": "Remote blockml-single 9233",
      "port": 9233,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local blockml-single 9233",
      "port": 9233,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },

    {
      "name": "Remote blockml-main 9234",
      "port": 9234,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local blockml-main 9234",
      "port": 9234,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },

    {
      "name": "Remote blockml-worker 9235",
      "port": 9235,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "restart": true
    },
    {
      "name": "Local blockml-worker 9235",
      "port": 9235,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    }
  ]
}
