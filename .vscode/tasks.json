{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ava run spec file - backend / blockml / disk",
      "command": "./node_modules/.bin/ava",
      "args": ["${relativeFile}"],
      "options": {
        "env": {
          "ENV_FILE_PATH": ".env",
          "BLOCKML_LOG_IO": "TRUE"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Cypress run spec file (headed)",
      "command": "./node_modules/.bin/nx",
      "args": [
        "e2e",
        "integra",
        "--headed",
        "--no-exit",
        "--browser chrome",
        "--spec=${relativeFile}"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Cypress run spec file",
      "command": "./node_modules/.bin/nx",
      "args": ["e2e", "integra", "--browser chrome", "--spec=${relativeFile}"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    }
  ]
}
