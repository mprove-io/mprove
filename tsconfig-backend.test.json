{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist/tests/backend",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~backend/*": ["apps/backend/src/*"],
      "~api/*": ["libs/api/src/*"],
      "@mprove/api": ["libs/api/src/_index.ts"]
    }
  },
  "include": ["apps/backend/**/*.ts"]
}
