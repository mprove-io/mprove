{
  "name": "mprove",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove.git"
  },
  "scripts": {
    "p:base": "prettier \"m-backend/**/*.{ts,js,json,scss,html}\" \"m-blockml/**/*.{ts,js,json,scss,html}\" \"m-common/**/*.{ts,js,json,scss,html}\" \"m-deploy/**/*.{ts,js,json,scss,html}\" \"m-disk/**/*.{ts,js,json,scss,html}\"  --config .prettierrc.yaml",
    "p:list": "npm run p:base -- --list-different",
    "p:write": "npm run p:base -- --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./**/*.{ts,js,json,scss,html}": [
        "prettier --write --config .prettierrc.yaml",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "typescript": "4.0.3",
    "ts-node": "9.0.0",
    "husky": "1.3.1",
    "lint-staged": "7.3.0",
    "prettier": "1.19.1"
  }
}
