{
  "name": "mprove",
  "author": "Alexander Kalitenya <akalitenya@mprove.io>",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/mprove-io/mprove.git"
  },
  "scripts": {
    "p:backend": "prettier \"m-backend/**/*.{ts,js,json,scss,html}\" --write --config .prettierrc.yaml",
    "p:blockml": "prettier \"m-blockml/**/*.{ts,js,json,scss,html}\" --write --config .prettierrc.yaml",
    "p:common": "prettier \"m-common/**/*.{ts,js,json,scss,html}\" --write --config .prettierrc.yaml",
    "p:disk": "prettier \"m-disk/**/*.{ts,js,json,scss,html}\" --write --config .prettierrc.yaml",
    "p:all": "npm run p:backend && npm run p:blockml && npm run p:common && npm run p:disk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./**/*.{ts,js,json,scss,html}": [
        "prettier --write --config .prettierrc.yaml",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lint-staged": "7.3.0",
    "prettier": "1.19.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.3",
    "prettier-plugin-organize-imports": "^1.1.1"
  }
}
