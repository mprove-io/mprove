{
  "model": "opus",
  "defaultMode": "plan",
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Grep",
      "Glob",
      "Bash(git status)",
      "Bash(ls *)",
      "Bash(ls -la *)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(gh search code*)",
      "Bash(gh search issues*)",
      "Bash(gh search repos*)",
      "Bash(gh search commits*)",
      "Bash(gh search prs*)",
      "Bash(gh pr list*)",
      "Bash(gh pr view*)",
      "Bash(gh pr diff*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr status*)",
      "Bash(gh issue list*)",
      "Bash(gh issue view*)",
      "Bash(gh issue status*)",
      "Bash(gh repo view*)",
      "Bash(gh repo list*)",
      "Bash(gh run list*)",
      "Bash(gh run view*)",
      "Bash(gh release list*)",
      "Bash(gh release view*)"
    ],
    "ask": ["Bash", "NotebookEdit", "WebFetch", "WebSearch", "Task"],
    "deny": [
      "Read(./_nogit/**)",
      "Read(./.angular/**)",
      "Read(./.husky/**)",
      "Read(./.turbo/**)",
      "Read(./.pnpm-store/**)",
      "Read(./.vscode/zshrc)",
      "Read(./dist/**)",
      "Read(./mprove_data/**)",
      "Read(./node_modules/**)",
      "Read(./notes/**)",
      "Read(./secrets/**)",
      "Read(./setup-docker/data/**)",
      "Read(./tmp/**)",
      "Read(./.env)",
      "Read(./.envrc)",

      "Edit(./_nogit/**)",
      "Edit(./.angular/**)",
      "Edit(./.husky/**)",
      "Edit(./.turbo/**)",
      "Edit(./.pnpm-store/**)",
      "Edit(./.vscode/**)",
      "Edit(./dist/**)",
      "Edit(./mprove_data/**)",
      "Edit(./node_modules/**)",
      "Edit(./notes/**)",
      "Edit(./secrets/**)",
      "Edit(./setup-docker/data/**)",
      "Edit(./tmp/**)",
      "Edit(./.env)",
      "Edit(./.envrc)",
      "Edit(./.gitattributes)",
      "Edit(./.gitignore)",

      "Write(./_nogit/**)",
      "Write(./.angular/**)",
      "Write(./.husky/**)",
      "Write(./.turbo/**)",
      "Write(./.pnpm-store/**)",
      "Write(./.vscode/**)",
      "Write(./dist/**)",
      "Write(./mprove_data/**)",
      "Write(./node_modules/**)",
      "Write(./notes/**)",
      "Write(./secrets/**)",
      "Write(./setup-docker/data/**)",
      "Write(./tmp/**)",
      "Write(./.env)",
      "Write(./.envrc)",
      "Write(./.gitattributes)",
      "Write(./.gitignore)"
    ]
  }
}
